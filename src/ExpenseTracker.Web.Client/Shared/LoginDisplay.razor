<AuthorizeView>
    <Authorized>
        Hello, @context.User.Identity.Name!
        <a class="btn btn-outline-secondary" href="/.auth/logout?post_logout_redirect_uri=/">Log out</a>
    </Authorized>
    <NotAuthorized>
        <a class="btn btn-outline-secondary" href="/login">Log in</a>
    </NotAuthorized>
</AuthorizeView>